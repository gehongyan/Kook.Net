{
    "metadata": [
        {
            "src": [
                {
                    "src": "../src",
                    "exclude": [
                        "**/bin/**",
                        "**/obj/**"
                    ],
                    "files": [
                        "**.csproj"
                    ]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "toc.yml",
                    "index.md"
                ]
            },
            {
                "files": [
                    "guides/**.md",
                    "guides/**/toc.yml"
                ]
            },
            {
                "files": [
                    "quick_reference/**.md",
                    "quick_reference/**/toc.yml"
                ]
            },
            {
                "files": [
                    "demos/**.md",
                    "demos/**/toc.yml"
                ]
            },
            {
                "files": [
                    "changelog/**.md",
                    "changelog/**/toc.yml"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "**/images/**",
                    "**/samples/**",
                    "langwordMapping.md"
                ],
                "exclude": [
                    "_site/**",
                    "**/obj/**",
                    "**.meta"
                ]
            }
        ],
        "dest": "_site",
        "template": [
            "default",
            "modern",
            "_template/material",
            "_template/description-generator"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "postProcessors": [
            "ExtractSearchIndex",
            "DescriptionPostProcessor"
        ],
        "globalMetadata": {
            "_appTitle": "Kook.Net 文档",
            "_appName": "Kook.Net 文档",
            "_appFooter": "Kook.Net (c) 2022-2024",
            "_enableSearch": true,
            "_appFaviconPath": "favicon.ico",
            "_gitContribute": {
                "branch": "master"
            }
        },
        "sitemap": {
            "baseUrl": "https://www.kooknet.dev"
        }
    }
}
