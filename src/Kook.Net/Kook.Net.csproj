<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../../Kook.Net.targets"/>

  <PropertyGroup>
    <RootNamespace>Kook</RootNamespace>
    <IsPackable>true</IsPackable>
    <PackageId>Kook.Net</PackageId>
    <Description>An unofficial C# .NET implementation for KOOK API, including all necessary components for building a KOOK bot.</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kook.Net.CardMarkup\Kook.Net.CardMarkup.csproj"/>
    <ProjectReference Include="..\Kook.Net.Commands\Kook.Net.Commands.csproj"/>
    <ProjectReference Include="..\Kook.Net.Core\Kook.Net.Core.csproj"/>
    <ProjectReference Include="..\Kook.Net.Rest\Kook.Net.Rest.csproj"/>
    <ProjectReference Include="..\Kook.Net.WebSocket\Kook.Net.WebSocket.csproj"/>
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework.Contains(`.`))' And '!$(TargetFramework.StartsWith(`netstandard`))' ">
    <ProjectReference Include="..\Kook.Net.Webhook\Kook.Net.Webhook.csproj"/>
  </ItemGroup>

</Project>
