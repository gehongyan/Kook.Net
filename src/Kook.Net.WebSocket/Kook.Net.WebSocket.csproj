<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../../Kook.Net.targets"/>

  <PropertyGroup>
    <RootNamespace>Kook.WebSocket</RootNamespace>
    <IsPackable>true</IsPackable>
    <PackageId>Kook.Net.WebSocket</PackageId>
    <Description>The WebSocket API implementation for Kook.Net.</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kook.Net.Core\Kook.Net.Core.csproj"/>
    <ProjectReference Include="..\Kook.Net.Rest\Kook.Net.Rest.csproj"/>
  </ItemGroup>

  <ItemGroup Condition=" !$(TargetFramework.StartsWith('net10.0')) ">
    <PackageReference Include="System.Linq.Async" Version="6.0.1"/>
  </ItemGroup>

</Project>
